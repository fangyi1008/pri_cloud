<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hontosec.cloud.storage.dao.StorageDao">
<select id="queryByPoolId" resultType="com.hontosec.cloud.storage.entity.StorageEntity">
	select * from storage_table where storage_pool_id = #{storagePoolId}
</select>
<select id="queryByPoolIdAndName" resultType="com.hontosec.cloud.storage.entity.StorageEntity">
	select * from storage_table where storage_pool_id = #{storagePoolId} and storage_volume_name = #{storageVolumeName}
</select>
	<select id="queryByStorageId" resultType="com.hontosec.cloud.storage.entity.StorageEntity">
		select * from storage_table where storage_id = #{storageId}
	</select>
	<select id="selectStorageName" resultType="com.hontosec.cloud.storage.entity.StorageEntity">
		select * from storage_table where storage_volume_name = #{storageVolumeName}
	</select>
	<select id="selectByBasicId" resultType="com.hontosec.cloud.storage.entity.StorageEntity">
		select * from storage_table where basic_volume_id = #{basicVolumeId}
	</select>
	<select id="selectIdentifier" resultType="com.hontosec.cloud.storage.entity.StorageEntity">
		select * from storage_table where identifier = #{identifier}
	</select>
	<select id="selectIdentifierPoolId" resultType="com.hontosec.cloud.storage.entity.StorageEntity">
		select * from storage_table where identifier = #{identifier} and storage_pool_id = #{storagePoolId}
	</select>
	<select id="queryList" resultType="com.hontosec.cloud.storage.entity.StorageEntity">
		SELECT
			st.*, su.username as createUserName,
			sp.storage_pool_name,
			sp.status as poolStatus
		FROM
			storage_table st 
		LEFT JOIN 
			storage_pool_table sp 
		on 
			st.storage_pool_id = sp.storage_pool_id 
		LEFT JOIN 
			sys_user su 
		on 
			st.create_user_id = su.user_id
		<where>
			<if test="storagePoolId != null and storagePoolId != 0">
			    AND st.storage_pool_id = #{storagePoolId}
			</if>
			<if test="createUserId != null and createUserId != 0">
				AND st.create_user_id = #{createUserId}
			</if>
			<if test="status != null and status != ''">
				AND st.status = #{status}
			</if>
		</where>
		order by st.create_time desc
		LIMIT #{page},#{limit}
	</select>
</mapper>

