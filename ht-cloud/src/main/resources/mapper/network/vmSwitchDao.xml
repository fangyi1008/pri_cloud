<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hontosec.cloud.network.dao.VmSwitchDao">
<select id="queryByName" resultType="com.hontosec.cloud.network.entity.VmSwitchEntity">
	select * from vm_switch_table where vm_switch_name = #{vmSwitchName}
</select>
<select id="queryByHostId" resultType="com.hontosec.cloud.network.entity.VmSwitchEntity">
	select * from vm_switch_table where host_id = #{hostId}
</select>
<select id="queryByGatwayHostId" resultType="com.hontosec.cloud.network.entity.VmSwitchEntity">
	select * from vm_switch_table where host_id = #{hostId} and gateway = #{gateway}
</select>

</mapper>