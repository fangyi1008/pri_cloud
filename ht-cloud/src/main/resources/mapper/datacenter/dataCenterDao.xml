<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hontosec.cloud.datacenter.dao.DataCenterDao">
<select id="queryByDataCenterName" resultType="com.hontosec.cloud.datacenter.entity.DataCenterEntity">
	select * from data_center_table where data_center_name = #{dataCenterName}
</select>
<select id="queryList" resultType="com.hontosec.cloud.datacenter.entity.DataCenterEntity">
	select 
		su.username as createUserName,dc.* 
	from 
		data_center_table dc left join sys_user su on dc.create_user_id = su.user_id
	<where>
		<if test="dataCenterName != null and dataCenterName != 0">
			AND dc.data_center_name like concat('%', #{dataCenterName}, '%')
		</if>
	</where>
	order by dc.create_time desc
	LIMIT #{page},#{limit}
</select>

</mapper>